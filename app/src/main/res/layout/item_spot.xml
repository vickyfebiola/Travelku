<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemSpot"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgSpot"
        android:layout_width="92dp"
        android:layout_height="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp"
        />

    <TextView
        android:id="@+id/titleSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Waterboom Duar"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="@id/imgSpot"
        app:layout_constraintLeft_toRightOf="@id/imgSpot"
        />

    <TextView
        android:id="@+id/tagSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wahana Air, Keluarga"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/titleSpot"
        app:layout_constraintLeft_toRightOf="@id/imgSpot"
        />

    <TextView
        android:id="@+id/deskripsiSpot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tagSpot"
        app:layout_constraintLeft_toRightOf="@id/imgSpot"
        app:layout_constraintRight_toRightOf="@id/titleSpot"
        app:layout_constraintBottom_toBottomOf="@id/imgSpot"
        />


    <TextView
        android:id="@+id/ratingSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="4.5"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="@id/imgSpot"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/jadwalSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09.00 - 17.00"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/hargaSpot"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/hargaSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.15.000,- / Orang"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgSpot"
        />

</androidx.constraintlayout.widget.ConstraintLayout>